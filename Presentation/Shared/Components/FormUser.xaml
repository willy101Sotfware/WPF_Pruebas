<Window x:Class="WPF_Pruebas.Presentation.Shared.Components.FormUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FormUser"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Height="1920" Width="1080"
        Background="#F0F0F0">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Panel principal con márgenes y tamaño adecuado -->
        <Border Background="White" CornerRadius="20" BorderBrush="#D3D3D3" BorderThickness="2" 
                Width="1000" Height="1400" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Título llamativo -->
                <TextBlock Text="Registro de Usuario" 
                           FontSize="72" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,100"/>

                <!-- Campo de Nombre -->
                <TextBlock Text="Nombre:" 
                           FontSize="48" 
                           Foreground="#555" 
                           Margin="0,0,0,20"/>
                <TextBox x:Name="name" 
                         FontSize="48" 
                         Padding="15" 
                         Height="100" 
                         Background="#F7F7F7" 
                         BorderBrush="#D3D3D3" 
                         BorderThickness="2"
                         Width="900"
                         VerticalContentAlignment="Center"/>

                <!-- Campo de Correo Electrónico -->
                <TextBlock Text="Correo Electrónico:" 
                           FontSize="48" 
                           Foreground="#555" 
                           Margin="0,40,0,20"/>
                <TextBox x:Name="email" 
                         FontSize="48" 
                         Padding="15" 
                         Height="100" 
                         Background="#F7F7F7" 
                         BorderBrush="#D3D3D3" 
                         BorderThickness="2"
                         Width="900"
                         VerticalContentAlignment="Center"/>

                <!-- Campo de Contraseña -->
                <TextBlock Text="Contraseña:" 
                           FontSize="48" 
                           Foreground="#555" 
                           Margin="0,40,0,20"/>
                <PasswordBox x:Name="password" 
                             FontSize="48" 
                             Padding="15" 
                             Height="100" 
                             Background="#F7F7F7" 
                             BorderBrush="#D3D3D3" 
                             BorderThickness="2"
                             Width="900"
                             VerticalContentAlignment="Center"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,80,0,0">
                    <!-- Botón de Cancelar -->
                    <Button Content="Cancelar" 
                            Width="300" Height="100" 
                            FontSize="48"
                            Foreground="#777" 
                            Background="#E0E0E0"
                            BorderBrush="#D3D3D3"
                            Margin="0,0,40,0"
                            HorizontalAlignment="Center"
/>

                    <!-- Botón de Enviar -->
                    <Button Content="Registrar" 
                            Width="300" Height="100" 
                            FontSize="48" 
                            Foreground="White"
                            Background="#007ACC"
                            BorderBrush="#007ACC"
                            HorizontalAlignment="Center" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
